# pyBioCurrent - Demostraci칩n Experimental

# 游대 Requisitos
import numpy as np
import matplotlib.pyplot as plt
from pybiocurrent.signal import BioNode
from pybiocurrent.translate import traducir_binario
from pybiocurrent.utils import calcular_fft, normalizar

# 游빏 1. Crear un nodo biol칩gico simulado
nodo = BioNode(name="Arabidopsis", input_device="Simulado", fs=10)

# 游댌 2. Leer se침al bioel칠ctrica durante 15 segundos
print("游니 Leyendo se침al simulada...")
senal = nodo.leer(tiempo=15)

# 游늵 3. Visualizar se침al cruda
plt.figure(figsize=(10, 4))
plt.plot(senal, label="Se침al bioel칠ctrica")
plt.title("Se침al bioel칠ctrica simulada")
plt.xlabel("Tiempo [muestras]")
plt.ylabel("Amplitud (V)")
plt.grid(True)
plt.legend()
plt.show()

# 游늳 4. FFT - An치lisis de frecuencia
freqs, fft_vals = calcular_fft(senal, fs=nodo.fs)
plt.figure(figsize=(8, 4))
plt.plot(freqs, fft_vals)
plt.title("An치lisis espectral (FFT)")
plt.xlabel("Frecuencia (Hz)")
plt.ylabel("Magnitud")
plt.grid(True)
plt.show()

# 游댟 5. Traducci칩n binaria
mensaje = traducir_binario(senal, umbral=0.015)
print("游 Mensaje binario traducido:")
print(mensaje[:100] + "..." if len(mensaje) > 100 else mensaje)

# 游꿛 6. Normalizaci칩n y representaci칩n visual tipo mapa de calor
norm = normalizar(senal)
plt.imshow([norm], cmap='viridis', aspect='auto')
plt.title("Visualizaci칩n art칤stica de se침al bioel칠ctrica")
plt.axis('off')
plt.show()
